<div class="loader">
        <i class="fas fa-sync-alt fa-3x fa-spin"></i>
</div>

<body>



<nav class="navbar  navbar-dark  navbar-expand-sm fixed-top" id="navani">

            <div class="navbar-header" style="color:white" id="nav_head">
                    <img src="/Images/landingPage_images/projectlogo.svg" alt="logo" width="40px" height="40px" style="padding-right:0px;padding-bottom: 4px">
                    <div class="navbar-brand">WorkSpace</div>
                    
            </div>
                
</nav>


<div class="container-fluid mainDiv">
    <div class="row mt-5 p-0 p-md-4 d-flex flex-row justify-content-center align-items-center">

    <div class="col-12 col-md-6">
      <h1><b>Reset Password</b></h1>
      <div>
        <% if(error && error.length > 0){%>
      
           
              <div class="alert alert-danger p-1 pos "  role="alert">
                <b><%= error %></b> 
              </div>
            
        <% }%>
      
     
        <% if(success && success.length > 0 ){%>
        
        
            <div class="alert alert-info p-1 mt-0 mt-md-2 pos " role="alert">
              <b ><%= success %></b>
            </div>
          
          
        <% } %>
      </div>
        <form action="/workspace/passwordReset/<%= token %>" method="POST">
            
            <br>
            <div class="form-group">
              <label for="password">New Password</label>
              <input type="password" name="password" value="" placeholder="New password" class="form-control"/>
            </div>
            <div class="form-group">
              <label for="confirm">Confirm Password</label>
              <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
            </div>
            <br>
            <div class="form-group">
              <button type="submit" class="subBtn">Update Password</button>
            </div>
          </form>
    
    </div>
    
    <div class="col-6 mt-5 d-none d-md-block">
    <img src="/Images/forgotp_images/preset.svg" height="100%" width="100%" alt="Failed to load">
    </div>
    
    </div>
    </div>


<!-- FOOTER -->

<% include partials/footer %>


                          
    
</body>
