    <link rel="stylesheet" href="/CSS/fpassword.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="/JS/loadingAni.js"></script>
    <script src="/JS/defaultPage.js"></script>
    
</head>
<div class="loader">
        <i class="fas fa-sync-alt fa-3x fa-spin"></i>
</div>

<body>


<nav class="navbar  navbar-dark  navbar-expand-sm fixed-top" id="navani">

            <div class="navbar-header" style="color:white" id="nav_head">
                    <img src="/Images/landingPage_images/projectlogo.svg" alt="logo" width="40px" height="40px" style="padding-right:0px;padding-bottom: 4px">
                    <div class="navbar-brand">WorkSpace</div>
                    
            </div>
                                
</nav>

<div class="container-fluid mainDiv">
<div class="row mt-5 p-0 p-md-4 d-flex flex-row justify-content-center align-items-center">

<div class="col-12 col-md-6">
    <h1 class="mb-5 mt-5 mt-md-5 pt-5 pt-md-0"><b>Forgot Password?</b></h1>
    <div >
        <% if(error && error.length > 0){%>
    
           
              <div class="alert alert-danger p-1 pos " style="width:85%" role="alert">
                <b><%= error %></b> 
              </div>
                  
        <% }%>
      
     
        <% if(success && success.length > 0 ){%>
      
        
            <div class="alert alert-info p-1 mt-0 mt-md-2 pos " style="width:85%" role="alert">
              <b ><%= success %></b>
            </div>
          
          
        <% } %>
      </div>
    <form action="/workspace/fpassword" method="POST">
        
        <div class="form-group">
            <h5 for="email" class="mb-4">A link will be sent to your email address to reset password</h5>
            <input type="email" name="email" class="form-control i1" placeholder="Enter your email id">
            <br>
            <input type="text" name="uname" class="form-control i2" placeholder="Enter your username">
        </div>
        <br>
        <div class="form-group">
            <input type="submit" class="subBtn" value="Reset Password">
        </div>
    </form>

</div>

<div class="col-6 mt-5 d-none d-md-block">
<img src="/Images/forgotp_images/forgotp.svg" height="100%" width="100%" alt="Failed to load">
</div>

</div>
</div>


<!-- FOOTER -->

<% include partials/footer %>


                          
    
</body>
</html>