                        <% if( prjData.assignedPM == true){ %>
                                <center>
                                        <a href="/workspace/project/PrjclientDetails/<%= prjData.pClientID %>/projectmanager"  style="font-size: 22px;color: black;text-decoration: none;"><i class="fas fa-user-tie mt-5 pt-3  pr-2" style="font-size: 30px;color: blue;"></i>WorkSpace client </a>
