<!-- START HERE -->

<div class="mainDiv">
<div class="container-fluid">
        <div class="row">
                <div class="col-12 col-md-3 accDiv">
                        <center>
                                <img src="<%= pmData.Fimage %>" class="mt-5" width="230px" height="230px" alt="Failed to load image" style="border-radius: 50%">
                        </center>
                       
                        <center>
                            <h3 class="mt-2" ><b><%= pmData.fname %> <%= pmData.lname %></b></h3>
                        </center>
        
                        <center>
                            <div class="mt-5 mb-1  butN">
                                    <img class="mr-2" src="/Images/Freelancer_images/Fhome_images/user-circle-solid.svg" alt="Failed to load image" width="35px" height="35px" style="margin-top:-4.5px" >
                                    <a href="/workspace/freelancer/accountDetails" style="display: inline;color: black;font-size: 1.3em;text-decoration: none"><b>Account details</b></a>
                            </div>
                           
                        </center>

                        <center>
                                <div class="mt-4 butN"  >
                                        <img class="mr-2" src="/Images/Freelancer_images/Fhome_images/bell-solid.svg" alt="Failed to load image" width="32px" height="32px" style="margin-top:-4.5px;margin-left: 7px;">
                                        <a href="/workspace/projectmanager/notifications" style="display: inline;color: black;font-size: 1.3em;text-decoration: none;" ><b>Ws Notifications</b></a>
                                </div>
                               
                        </center>

                        <center>
                                <i class="fas fa-angle-double-down d-block d-sm-none fa-lg mt-5"></i>
                        </center>
                </div>
                
                <div class="col-12 col-md-9 homeDiv p-4">
                        <div class="container-fluid">
                                <div class="row">
                                        <div class="col-12 newProject p-3 p-md-5">
                                                <div class="row">
                                                        <div class="col-12 col-md-6">
                                                                <h3 class="ml-3 ml-md-5 mb-4" style="margin-top: -5px">Find a new project:</h3>
                                                                <a href="/workspace/projectmanager/findprojects" class="newProjBtn ml-2 ml-md-5" style="color:white;text-decoration: none">FIND PROJECT</a>
                                                        </div>
                                                        <div class="col-12 col-md-6">
                                                                <div class="grayBox">
                                                                        <div class="toAlign">
                                                                                        <img src="/Images/Client_images/history-solid.svg" alt="Failed to load images" width="30px" height="30px" style="margin-left: -160px;margin-top: 38px">
                                                                                        <a href="/workspace/projectmanager/projecthistory" style="position: absolute;margin-top:36px;text-decoration: none" class="ml-3 teamLink">Project history</a><br><br>
                                                                                        <img src="/Images/Client_images/users-solid.svg" alt="Failed to load images" width="30px" height="30px" style="margin-left: -160px">
                                                                                        <a href="/workspace/projectmanager/wsteamhistory" style="position: absolute;margin-top: -2px;text-decoration:none" class=" ml-3 teamLink" >WsTeam history</a>
                
                                                                        </div>
                                                                        

                                                                </div>
                                                        </div>
                                                </div>
                                        </div>
                                </div>

                                <h4 class="mt-4 ongProj d-none d-md-block">Ongoing projects:</h4>

                                <div class="row mt-5 mt-md-0 scrollDiv" >
                                        <% prjData.forEach(function(prd){%>
                                                <% for(var i = 0;i < pmData.pmProjects.length ; i++){ %>
                                                        <% if(pmData.pmProjects[i].projectID == prd._id){ %>
                                                                <div class="projectCard ml-4 ">
                                                                                <center>
                                                                                        <img src="/Images/Client_images/users-solid.svg" class="mt-4 " alt="" height="45px" width="45px">
                                                                                </center>
                                                                                <% if(prd.pTeam){ %>
                                                                                        <% wst.forEach(function(ws){ %>
                                                                                                <% if(ws._id == prd.pTeam){ %>
                                                                                                        <center>
                                                                                                                <h4 class="mt-1 mb-2"><%= ws.teamName %></h4>
                                                                                                        </center>
                                                                                                <% } %>
        
                                                                                        <% }); %>
                                                                                <% }else{ %>
                                                                                        <center>
                                                                                                <h5 class="mt-1" style="margin-bottom: 28px;">Team not assigned</h5>
                                                                                        </center>
                                                                                <% } %>
                                                                                <center>
                                                                                        <h2 style="color: blue" class="mt-4"><b><%= prd.pName %></b></h2>
                                                                                </center>
                                                                        
                                                                        <a href="/workspace/projectmanager/project/<%= prd._id %>/<%= prd.pName %>" class="mangBtn" style="color: white;font-weight: bold;text-decoration: none">MANAGE</a>
                                                                        </div>
                                                        <% } %>
                                                <% } %>
                                        <% }); %>
                                       
                                </div>
                        </div>
                </div>
        </div>
</div>
</div>

