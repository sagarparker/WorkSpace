    <div class="row mb-1">
        <div class="col-6 text-center" id="logBtn">LOGIN</div>
        <div class="col-6 text-center" id="signupBtn">SIGN-UP</div>
</div>
    
    
    <div id="loginForm" class="row mt-5 mt-md-0" style="text-align: center">
      
     
       <div class="col-12 ">
        <div class="container">
          <% if(error && error.length > 0){%>
            <style>
              .pos{
                      margin-bottom: -30px;
                      margin-top: 10px;
                      
                  }

                  @media screen and (max-width:600px){
              .pos{
                  margin-bottom: 0px;
                  margin-top: -30px;
                  }
                }
            </style>
             
                <div class="alert alert-danger p-1 ml-4 mr-4 pos " role="alert">
                  <b><%= error %></b> 
                </div>
              
            
          <% }%>
        
       
          <% if(success && success.length > 0 ){%>
            <style>
              .pos{
                      margin-bottom: -30px;
                      margin-top: 10px;
                  }

                  @media screen and (max-width:600px){
              .pos{
                  margin-bottom: 0px;
                  margin-top: -30px;
                  }
                }
            </style>
          
              <div class="alert alert-info p-1 ml-4 mr-4 mt-0 mt-md-2 pos " role="alert">
                <b ><%= success %></b>
              </div>
            
            
          <% } %>
        </div>

        
      
        <form action="/workspace/login" method="POST" autocomplete="off">
          
          <input type="text" name="username" placeholder="&#xf007;&nbsp USERNAME" id="loginID" class=" col-9 p-2 mt-3 mt-md-5 " style="font-family: AvenirNext, 'Font Awesome 5 Free'"   required>
          <input type="password" name="password" placeholder="&#xf084;&nbsp PASSWORD" id="loginPSWD" class="col-9 mt-5 p-2" style="font-family: AvenirNext, 'Font Awesome 5 Free'" required>
          <input type="submit" class="col-4 mt-5 btnStyle p-2" id="loginSubmit" value="LOGIN">
         
          </form> 
         
       </div>
    
   
      <hr style="width:70%" class="mt-5 col-8">
      <div class="col-12 justify-content-center">
        <a class="col-6" href="/workspace/fpassword" id="fp">Forgot password?</a>
      </div>

      <p class="pt-3 col-12">New user? <span id="innerSignup">Sign Up</span></p>
    
      
    
    </div>

  </div>

<div class="container-fluid">
  <div id="signupForm" class="row" style="text-align: center">
    
    <form action="/workspace/signup" method="POST" class="col-12" autocomplete="off">
    <input type="email" class="col-9 p-2 mt-5" id="fname" name="email" placeholder="&#xf0e0;&nbsp EMAIL ID" style="font-family: AvenirNext, 'Font Awesome 5 Free'" required>

    <input type="text" class="col-9 p-2  mt-5 mt-md-4" id="uname" name="username" placeholder="&#xf007;&nbsp USERNAME" style="font-family: AvenirNext, 'Font Awesome 5 Free'" required>
    <input type="password" class="col-9 p-2 mt-5 mt-md-4" id="upass" name="password" placeholder="&#xf084;&nbsp PASSWORD" style="font-family: AvenirNext, 'Font Awesome 5 Free'" required>

  
   <h4 class="col-12 mt-4 mt-md-5">Who are you?</h4>
    <div class="col-12 mt-2">
      <input type="radio" name="wsuser" value="client" id="r1" required><label for="r1">CLIENT</label>
      <input type="radio" class="ml-2" name="wsuser" value="freelancer" id="r2" required> <label for="r2">FREELANCER</label>
    </div>
    
    <div class="col-12 mt-3">
        <input type="submit" class="btnStyle p-2 pl-4 pr-4" id="signupSubmit" value="SIGN-UP">
    </div>
    
    </form>



    </div>

</div>
    
  



