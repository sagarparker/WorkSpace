
<!-- HEADER -->

<% include ../partials/headerOne %>
<link rel="stylesheet" href="/CSS/freelancer/freelancerHome.css">

<style>
    .reviewBlock{
        height: 80px;
        width: 100%;
        border-radius: 10px;
        background-color: rgb(235, 235, 235);
        padding: 7px;
        margin-bottom: 10px;
        overflow-y: hidden;
    }
</style>

<script src="/JS/freelancerHome/menuBar.js"></script>

</head>
<div class="loader">
        <i class="fas fa-sync-alt fa-3x fa-spin"></i>
</div>

<body>


<nav class="navbar  navbar-dark  navbar-expand-sm fixed-top" id="navani">

            <div class="navbar-header" style="color:white">
                    <img src="/Images/landingPage_images/projectlogo.svg" alt="logo" width="40px" height="40px" style="padding-right:0px;padding-bottom: 4px">
                    <div class="navbar-brand">WorkSpace</div>
            </div>

            
    
            <button class="navbar-toggler" data-toggle="collapse" data-target="#cnb" id="hamBtn">
              <img src="/CSS/menu.svg" alt="" width="20px" >
            </button>
    
            
                
            
            
            <div class="collapse navbar-collapse" id="cnb">
            
                <ul class="navbar-nav" >
                
               
                
             

                <li class="nav-item">
                    <a class="nav-link" href="/workspace/contact" target="_blank" onMouseOver="this.style.color='blue'" onMouseOut="this.style.color='white'" style="color:white">Contact us</a>
                </li>

                <hr class="d-block d-md-none" style="width:100%;background-color:gray;height: 1px"> 

                <li class="nav-item d-block d-md-none">
                    <a class="nav-link" href="/workspace/logout"  onMouseOver="this.style.color='blue'" onMouseOut="this.style.color='white'" style="color:white;font-size: 1.3em"><b>Logout</b></a>
                </li>

            

             
             

                
                
                
                </ul>
            </div> 

            <div class="justify-content-end d-none d-sm-block">
                
                <div style="cursor: pointer;display: inline">
                        <i class="fas fa-sign-in-alt fa-lg">  </i> 
                        <a  href="/workspace/logout" class="noDecoration" style="color:white;text-decoration: none;font-weight: bold">Logout</a>
                </div>

                
            </div>
                
                
</nav>



<div class="menu" style="background-color: rgb(240, 240, 240)">
      
    
        <div class="menuLink" style="font-weight: bolder;text-align: left">
            <h4 style="padding-left: 40px;margin-top:80px;padding-bottom:90px">Menu</h4>
            <h3 class="mt-3"><a href="/workspace/freelancer" style="   text-decoration: none !important;font-weight: bold;color: blue">Home</a></h3>
            <h3 class="mt-5"><a href="/workspace/freelancer/teamDetails" style="   text-decoration: none !important;font-weight: bold;color: blue">Team</a></h3>
            <h3 class="mt-5"><a href="/workspace/freelancer/accountDetails" style="   text-decoration: none !important;font-weight: bold;color: blue">Account</a></h3>
            
        </div>
</div>

<div class="barHolder" style="margin-top: 75px;margin-left:17px;position:absolute;z-index: 5;">
        <img src="/Images/Freelancer_images/Fhome_images/bars-solidB.svg" alt="" width="37px" height="37px"  >
</div>

<div class="mainDiv">
   
    <div class="container-fluid">
           

        <div class="row">

            <div class="col-12 col-md-3 userCard">
                <center>
                        <img src="<%= fld.Fimage %>" class="mt-5 " width="230px" height="230px" alt="Failed to load image" style="border-radius: 50%">
                </center>
               
                <center>
                    <h3 class="mt-2" ><b><%= fld.fname%> <%= fld.lname%></b></h3>
                </center>

                <center>
                    <div class="mt-4 mt-sm-5 butN">
                            <img class="mr-2" src="/Images/Freelancer_images/Fhome_images/user-circle-solid.svg" alt="Failed to load image" width="35px" height="35px" style="margin-top:-4.5px" >
                            <a href="/workspace/freelancer/accountDetails" style="display: inline;color: black;font-size: 1.3em;text-decoration: none"><b>Account details</b></a>
                    </div>
                   
                </center>

                <% if(fld.InATeam){ %>
                    <center>
                            <div class="mt-4 butN" >
                                    <img class="mr-2" src="/Images/Freelancer_images/Fhome_images/users-solid.svg" alt="Failed to load image" width="35px" height="35px" style="margin-top:-4.5px">
                                    <a href="/workspace/freelancer/teamDetails" style="display: inline;color: black;font-size: 1.3em;text-decoration: none" ><b>WsTeam details</b></a>
                            </div>
                           
                    </center>
                <% }else{ %>
                    <center>
                        <div class="mt-4 butN" style="margin-left: -40px" >
                                <img class="mr-2" src="/Images/Freelancer_images/Fhome_images/users-solid.svg" alt="Failed to load image" width="35px" height="35px" style="margin-top:-4.5px">
                                <a href="/workspace/freelancer/teamSelection" style="display: inline;color: black;font-size: 1.3em;text-decoration: none" ><b>Join a team</b></a>
                        </div>
                       
                </center>
                <% } %>
             

                <center>
                        <i class="fas fa-angle-double-down d-block d-sm-none fa-lg mt-4"></i>
                </center>
            </div>

            <div class="col-12 col-md-9 detailsDiv">
                <div class="container-fluid">
                        <div class="row currentProject pr-3">
                                <% if(fld.InATeam){ %>
                                    <% if(wsData.teamAdmin == fld.detailsOwner && wsData.projLive == false ){ %>
                                        <h4 style="font-weight: bold;margin-left: 27px;margin-right: 20px" >No current project : </h4>
                                        <a href="/workspace/freelancer/findprojects" class="fnPrj" style="color: white;text-decoration: none;">FIND A NEW PROJECT</a>
                                    <% }else{ %>
                                    <div class="col-12 col-md-5">
                                            <h3 class="ml-2">Go to the ongoing project : </h3>
                                    </div>
                                    <div class="col-12 col-md-2">
                                    
                                        <% if(wsData.projLive == true){ %> 
                                            <h2 class="prjName"><b><a href="/workspace/freelancer/project/<%= prjData._id %>/<%= prjData.pName %>/<%= fld._id %>" style="text-decoration:none;color:blue"><%= prjData.pName %></a></b></h2>
                                        <% }else{ %>
                                            <p class="prjName" style="font-size: 1.1em;padding-top:6px"><b><a style="text-decoration:none;color:blue">No current project</a></b></p>
                                        <% } %>
                                    
                                    </div>
                                    <% } %>
                                
                                <% }else{ %>
                                <div class="col-12 col-md-5 ml-4" style="margin-right: 10px;">
                                        <h3 class="ml-2">Go to the ongoing project : </h3>
                                </div>
                                    <p class="prjName" style="font-size: 1.1em;padding-top:6px"><b><a style="text-decoration:none;color:blue">No current project</a></b></p>
                                <% } %>
                               
                                <div class="col-4 d-none d-md-block projStatus pr-1  pt-2">
                                    <% if(fld.InATeam ){ %>

                                        <% if(wsData.projLive == true){ %>
                                            <h5><b><span style="color: blue;">Progress  &nbsp;: </span>&nbsp;<%= prjData.prjProgress%>%</b></h5>
                                            <h5><b><span style="color: blue;">Deadline : </span>&nbsp;<%= prjData.pDeadline %></b></h5>
                                        <% }else{ %>
                                            <h5><b><span style="color: blue;">Progress  &nbsp;: </span>&nbsp;-- / --</b></h5>
                                            <h5><b><span style="color: blue;">Deadline : </span>&nbsp;-- / --</b></h5>
                                        <% } %>
                                   
                                    <% }else{ %>
                                       
                                        <h5><b><span style="color: blue;">Progress  &nbsp;: </span>&nbsp;-- / --</b></h5>
                                        <h5><b><span style="color: blue;">Deadline : </span>&nbsp;-- / --</b></h5>
                                    <% } %>
                                   
                             
                                    
                                </div>
                            </div>
                </div>
                

                <div class="homeCard mt-5 mt-md-3">
                    <div class="row">
                            <div class="col-12  col-md-8 frlReviews pt-3">
                                <% if(fld.frlReviews.length > 0){ %>
                                    <h3 class="pl-4" ><b>Reviews</b></h3>
                                <%} else {%>
                                    <h3 class="pl-4" style="color:white"><b>Reviews</b></h3>
                                <% } %>
                                <div class="scrollDiv"  style="height: 330px;margin-bottom: 10px;padding: 12px;padding-left: 16px;padding-top: 17px;">
                                    <% if(fld.frlReviews.length > 0){ %>
                                        <% fld.frlReviews.forEach(function(flr){ %>
                                            <div class="reviewBlock">
                                                    <p style="font-weight: bold;font-size: 1.2em;color:blue"><%= flr.name %> - 
                                                    <% for( var i = 0 ; i < flr.stars ; i++){ %>
                                                            <i class="fas fa-star" ></i>
                                                    <% } %>
                                                    
                                                    </p>
                                                    <p style="margin-top: -5px;"><%= flr.revTxt %></p>
                                            </div>
                                        <% }); %>
                                    <% }else{ %>
                                        <center>
                                            <h5 style="font-weight: bold;margin-top:90px;color: gray;">
                                                NO REVIEWS FOUND
                                            </h5>
                                            <hr width="50%">
                                            <h6 style="color: gray;">Please start a new project to get a review</h6>
                                        </center>
                                    <% } %>
                                
                                            
                                </div>
                            
                                
                            </div>
                            <div class="col-12 col-md-4 featuresHolder mt-3">
                                <div class="features ">
                                        <% if(fld.InATeam){ %>
                                       <center>
                                           <div class="fontS">
                                               <img src="/Images/Freelancer_images/Fhome_images/comments-solid.svg" alt="Failed to load image" width="40px" height="30px" style="margin-top:-4.5px">
                                               <a href="/workspace/chat/<%= fld.FTeamID  %>/<%= fld.fname %>"  style="text-decoration: none;color:black;font-weight: bold;font-size: 1.4em" >Chat with team</a>
                                           </div>
                                       </center>
                                       <%} else {%>
                                       <h3 class="ml-5 pl-3"><b>Ws Tools</b></h3>
                                       <% } %>
                                       <center>
                                            <div class="mt-5 pt-2 fontS" style="margin-left: -60px">
                                                <img src="/Images/Freelancer_images/Fhome_images/list-solid.svg" alt="Failed to load image" width="40px" height="30px" style="margin-top:-4.5px">
                                                <a href="/workspace/freelancer/todo/<%= fld._id %>/<%= fld.designation %>" style="text-decoration: none;color:black;font-weight: bold;font-size: 1.4em">Todo list</a>
                                            </div>
                                        </center>
                                        <% if(fld.frlJoinTeamReq.length == 0 && fld.TeamRequest.length == 0 ){ %>
                                            <center>
                                                    <div class="mt-5 pt-2 fontS" style="margin-left: -18px">
                                                        <img src="/Images/Freelancer_images/Fhome_images/bell-solid.svg" alt="Failed to load image" width="40px" height="30px" style="margin-top:-4.5px">
                                                        <a href="/workspace/freelancer/notifications" style="text-decoration: none;color:black;font-weight: bold;font-size: 1.4em">Notifications</a>
                                                    </div>
                                            </center>
                                        <% }else{ %>
                                            <center>  
                                                <div class="mt-5 pt-2 ">
                                                        <img src="/Images/Freelancer_images/Fhome_images/notf.svg" alt="Failed to load image" width="50px" height="50px" style="margin-top:-4.5px">
                                                </div>                                                  
                                            </center>
                                            <center>
                                                    <div class="pt-3 fontS" >
                                                        <a href="/workspace/freelancer/notifications" style="text-decoration: none;color:black;font-weight: bold;font-size: 1.3em">New Notifications</a>
                                                    </div>
                                            </center>
                                        <% } %>
                                       
                                </div>
                           
                            </div>
                    </div>
                   

                </div>
            </div>
        </div>
    </div>
</div>




<!-- FOOTER -->

<% include ../partials/footerAcc %>


                          
