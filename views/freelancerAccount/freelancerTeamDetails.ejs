
<!-- HEADER -->

<% include ../partials/headerOne %>
<!--INSERT SCRIPTS AND STYLESHEETS BELOW-->
<link rel="stylesheet" href="/CSS/freelancer/freelancerTeamDetails.css">
<script src="/JS/freelancerHome/menuBar.js"></script>

<% include ../partials/headerTwo %>

<!-- START HERE -->

<div class="menu" style="background-color: rgb(240, 240, 240)">
      
    
        <div class="menuLink" style="font-weight: bolder;text-align: left">
            <h4 style="padding-left: 40px;margin-top:80px;padding-bottom:90px">Menu</h4>
            <h3 class="mt-3"><a href="/workspace/freelancer" style="   text-decoration: none !important;font-weight: bold;color: blue">Home</a></h3>
            <h3 class="mt-5"><a href="/workspace/freelancer/teamDetails" style="   text-decoration: none !important;font-weight: bold;color: blue">Team</a></h3>
            <h3 class="mt-5"><a href="/workspace/freelancer/accountDetails" style="   text-decoration: none !important;font-weight: bold;color: blue">Account</a></h3>
            
        </div>
</div>

<div class="barHolder" style="position: absolute;margin-top: 75px;margin-left: 15px;z-index: 2;cursor: pointer;">
        <img src="/Images/Freelancer_images/Fhome_images/bars-solidB.svg" alt="" width="37px" height="37px" >
</div>

<div class="mainDiv">
<div class="container-fluid">
    <div class="row">

        <div class=" col-12 col-md-3 teamDetails">
            <center>
                <img src="/Images/Freelancer_images/Fhome_images/users-solid.svg" class="mt-5 pt-3 ptm-sm-0" width="50px" height="50px" alt="">
            </center>
            <center>
                <h2 style="color: blue" class="mt-2"><b><%= wsTeamDetails.teamName %></b></h2>
            </center>
            <center>
                <h4 class="mt-5"><b>Rating: <span style="color: blue">4</span>/5</b></h4>
            </center>
            <center>
                <h4 class="mt-5" ><b>Category</b></h4>
            </center>
            <center>
                <h4 style="color: blue" class="mb-5"><b><%= wsTeamDetails.teamCategory %></b></h4>
            </center>

            <center>
                <form action="/workspace/freelancer/leaveTeam" method="POST">
                    <button type="submit" class="teamManage" style="color: white;border:none">LEAVE TEAM</button>
                </form>
            </center>

            <center>
                    <i class="fas fa-angle-double-down d-block d-sm-none fa-lg mt-5"></i>
            </center>
        </div>

        <div class="col-12 col-md-9 memberDetails">
            <div class="contHolder p-3 ">
                <div class="scrollDiv">
                        <% allFrl.forEach(function(allF){ %>
                            <% if(allF.detailsOwner == wsTeamDetails.teamAdmin ){ %>
                                <center>
                                        <img src="<%= allF.Fimage %>" class="mt-2" width="110px" height="110x" style="border-radius:50%" alt="Failed to load image">
                                    </center>
                                    <center>
                                        <h4 class="mt-1"><b><%= allF.fname%> <%= allF.lname %></b></h4><br>
                                        <h5 style="margin-top: -30px"><b style="color: blue"><%= allF.designation %> <br> <span style="color: black">(</span>Team leader<span style="color: black">)</span></b></h5>
                                    </center>
                            <%}%>
                        <% }); %>
                       
        
                       
                        <div class="container-fluid">
                            <div class="row mt-4">
                                    <% allFrl.forEach(function(allFrlData){ %>
                                        <% for(var i = 0; i< wsTeamDetails.teamMembers.length; i++ ){ %>
                                            <% if(allFrlData.detailsOwner == wsTeamDetails.teamMembers[i].memberID && allFrlData.detailsOwner != wsTeamDetails.teamAdmin ){ %>
                                                <div class="col-12 col-md-3 mt-4 mt-md-2">
                                                        <center>
                                                                <img src="<%= allFrlData.Fimage %>" width="110px" height="110x" style="border-radius: 50%" alt="Failed to load image">
                                                        </center>
                                                        <center>
                                                            <h4 class="mt-1"><b><%= allFrlData.fname%> <%= allFrlData.lname%></b></h4><br>
                                                            <h5 style="margin-top: -20px"><b style="color: blue"><%= allFrlData.designation %></b></h5>
                                                        </center>
                                                </div>
                                            <% } %>
                                        <% } %>
                                    <% }); %>
                            
                                
                            </div>
                            
                        </div>
                </div>
                
             
            </div>
        </div>

    </div>
</div>
</div>

<!-- FOOTER -->

<% include ../partials/footerAcc %>